<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fuze.potryservice.mapper.PoemLunTanMapper">
    <insert id="fabu12" parameterType="com.fuze.dto.PoemBlogDtoPlus" useGeneratedKeys="true" keyProperty="bolgid">
        insert into poem.poem_blog(user_id, title, images, content, type, poem_id, poem_word) values(
                                                                                                     #{userid},
                                                                                                     #{title},
                                                                                                     #{images},
                                                                                                     #{content},
                                                                                                     #{type},
                                                                                                     #{poemid},
                                                                                                     #{poemword}
                                                                                                     )
    </insert>
    <select id="selectConmmets" resultType="com.fuze.vo.FabaCommnetVo">

    </select>
    <select id="selectMainComments" resultType="com.fuze.vo.FabaCommnetVo">
        SELECT * FROM poem.forum_comment
    WHERE blog_id = #{blogid} AND parent_id = -1
    </select>
    <select id="selectChildComments" resultType="com.fuze.vo.FabaCommnetVo">
    SELECT * FROM poem.forum_comment
    WHERE parent_id IN <foreach item="id" collection="mainCommentIds" open="(" separator="," close=")">
        #{id}
    </foreach>
</select>
</mapper>